// Import all partials
@require './*.styl'

.app
  height 100%
  display flex
  flex-direction column

html, body, #main
  height 100%

.text-field
  max-width: 800px
  margin 0 auto
  width 100%
  text-align center
  border-width: 1px;
  border-color: #ff4081;
  border-style: solid;
  border-radius: 5px;
  margin-top 5px

.text-field.multi-line
  height auto

.main-area
  padding 20px 20px 20px 20px

.legend
  height: auto !important

.label
  margin-top 10px !important